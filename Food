import java.util.Date;

public class Food {
    private Date date = new Date();
    private String Type;
    private String Name;
    private String SystemTime;
    private int Calories;

    public Food (String Type, String Name, int Calories) {
        this.Type = Type;
        this.Name = Name;
        this.Calories = Calories;
        this.SystemTime = String.format("%s %tB %<te, %<tT", "", date );
    }

    public String getSystemTime() {
        return SystemTime;
    }

    public int getCalories() {
        return Calories;
    }

    public String getType() {
        return Type;
    }

    public String getName() {
        return Name;
    }
}
